<h1><%= @post.title %></h1>
<br>

<% if @post.user.id != @current_user.id %>
	<% if !@post.is_fav?(@current_user) %>
		<%= button_to "Add to Favorites", add_fav_path, params: { post_id: @post.id } %>
	<% else %>
		<%= button_to "Remove from Favorites", delete_fav_path, method: 'delete', params: { post_id: @post.id } %>
	<% end %>
<% end %>
<br>
<p>Poster: <%= @post.user.name %></p> 
<p>Cateory: <%= @post.category %></p>
<p>Price: $<%= @post.price %></p>
<p>Description: <%= @post.desc %></p>


<% @post.images.each do |img|%>
    <%= image_tag img.uploaded_image.variant(resize_to_limit: [nil, 300]) %>
<% end %>
<hr>

<section class="section comments">
	<div>
		<p class="subtitle is-5"><strong><%= @post.comments.count %></strong> Comments</p>
		<%= render @post.comments %>
        <%= render 'comments/form' %>
	</div>
</section>
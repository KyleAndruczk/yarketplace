<table class="table w-auto m-3">
  <thead>
    <tr>
        <th scope="col">Fav</th>
        <th class="w-50" scope="col">Title</th>
        <th scope="col">Created</th>
        <th class="w-25" scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
        <tr>
            <td><%= "â˜…" if post.is_fav?(@current_user) %></td>
            <th scope="row"><%= post.title %></th>
            <td><%= post.create_date %></td>
            <td>
                <div class="d-flex">
                    <%= button_to "View", post_path(post), method: 'get', class: "btn btn-primary me-2" %>
                </div>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>
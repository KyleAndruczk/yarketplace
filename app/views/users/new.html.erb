<h1>Create an account</h1>

<%= form_with model: @user do |f| %>
    <%= f.label :name, "Full Name" %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.text_field :password %><br>
    <br><br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br><br>
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %> <!-- is value returned as integer? -->
    <br><br>
    <%= f.label :location, "Where are you located?" %>
    <%= f.text_field :location %>
    <br><small>If living in a college dormitory, please specify.</small>
    <br><br>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :zip_code %>
    <%= f.number_field :zip_code %> <!-- should this be a string? number field has those arrows -->
    <br><br>
    <%= f.submit "Sign up" %>
<% end %>

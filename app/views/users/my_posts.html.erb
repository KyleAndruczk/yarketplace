<div class="container m-5 pe-4 ps-4">
  <div class="column">
    <div class="row">
      <div class="d-flex justify-content-between">
        <h1>My Posts</h1>
        <%= button_to "Create New Post", new_post_path, method: 'get', class: "btn btn-primary" %>
      </div>
    </div>
    <div class="row mt-2">
      <table class="table">
        <thead>
          <tr>
            <th class="w-75" scope="col">Title</th>
            <th class="w-25" scope="col">Created</th>
            <th class="w-auto" scope="col">Comments</th>
            <th class="w-auto" scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @my_posts.each do |post| %>
              <tr>
                  <td scope="row"><%= post.title %></td>
                  <td><%= post.create_date %></td>
                  <td><%= post.num_comments %></td>
                  <td>
                      <div class="d-flex">
                          <%= button_to "View", post_path(post), method: 'get', class: "btn btn-primary me-2" %>
                          <%= button_to "Edit", edit_post_path(post), method: 'get', class: "btn btn-secondary" %>
                      </div>
                  </td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

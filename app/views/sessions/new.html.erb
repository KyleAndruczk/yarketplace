<%= stylesheet_link_tag "/stylesheets/user-form" %>

<div class="form-container">
    <h1>Sign in</h1>

    <%= form_with scope: :user, url: signin_path do |f| %>
        <!-- <%= f.label :email %> -->
        <%= f.text_field :email, placeholder: "Email" %>
        <br>
        <!-- <%= f.label :password %> -->
        <%= f.password_field :password, placeholder: "Password" %>
        <br>
        <%= f.submit "Sign in" %>
    <% end %>
</div>
